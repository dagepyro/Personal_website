<%- include('layout/header.ejs')%>

<%- include('layout/navigation.ejs')%>

<!--Section: Contact v.1-->
<section class="section pb-5">

    <!--Section heading-->
    <h2 class="section-heading h1 pt-4 text-center white-text">Contact us</h2>
    <!--Section description-->
    <p class="section-description pb-4 text-center white-text">This is our contact page</p>
  
    <div class="row justify-content-center">
  
      <!--Grid column-->
      <div class="col-lg-5 mb-4">
  
        <!--Form with header-->
        <div class="card">
  
          <div class="card-body uhh-green-2 white-text">
            <!--Header-->
            <div class="form-header uhh-green white-text text-center">
              <h3><i class="fas fa-envelope"></i> Write to us:</h3>
            </div>
  
            <p class="text-center">We'll write rarely, but with only the best content.</p>
            <br>
  
            <!--Body-->
            <div class="md-form">
              <i class="fas fa-user prefix  white-text"></i>
              <input type="text" id="form-name" class="form-control">
              <label class="white-text" for="form-name">Your name</label>
            </div>
  
            <div class="md-form">
              <i class="fas fa-envelope prefix white-text"></i>
              <input type="text" id="form-email" class="form-control">
              <label class="white-text" for="form-email">Your email</label>
            </div>
  
            <div class="md-form">
              <i class="fas fa-tag prefix white-text"></i>
              <input type="text" id="form-Subject" class="form-control">
              <label class="white-text" for="form-Subject">Subject</label>
            </div>
  
            <div class="md-form">
              <i class="fas fa-pencil-alt prefix white-text"></i>
              <textarea id="form-text" class="form-control md-textarea" rows="3"></textarea>
              <label class="white-text" for="form-text">Message</label>
            </div>
  
            <div class="text-center mt-4">
              <button class="btn btn-uhh-green">Submit</button>
            </div>
  
          </div>
  
        </div>
        <!--Form with header-->
  
      </div>

      
      <!--Grid column-->
  
    </div>
  
  </section>
  <!--Section: Contact v.1-->

<%- include('layout/footer.ejs')%>